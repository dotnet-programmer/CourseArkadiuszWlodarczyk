<Window x:Class="Chapter_9_Layouts.Chapter_9_4_StackPanelAndWrapPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
		Title="Chapter_9_4_StackPanelAndWrapPanel"
		Height="400"
		Width="600"
		WindowStartupLocation="CenterScreen">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition />
		</Grid.RowDefinitions>

		<StackPanel Grid.Row="0"
					Grid.Column="0"
					Orientation="Horizontal">
			<Button Width="100"
					Margin="10"
					VerticalAlignment="Top"
					Content="1" />
			<Button Width="100"
					Margin="10"
					Content="2" />
			<Button Width="100"
					Margin="10"
					VerticalAlignment="Bottom"
					Content="3" />
		</StackPanel>

		<WrapPanel Grid.Row="1"
				   Grid.Column="0"
				   Orientation="Horizontal"
				   Width="300"
				   Background="Teal">
			<Button Width="190"
					Content="1" />
			<Button Width="100"
					Content="2" />
			<Button Width="50"
					Content="3" />
		</WrapPanel>
	</Grid>
</Window>