<Window x:Class="Chapter_10_AdvancedWpf.Chapter_10_14_DataTrigger"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:Chapter_10_AdvancedWpf"
		mc:Ignorable="d"
		Title="Chapter_10_14_DataTrigger"
		Height="400"
		Width="600"
		WindowStartupLocation="CenterScreen">

	<StackPanel>
		<StackPanel.Resources>
			<local:MyImages x:Key="image1"
							IsFound="True" />
			<local:MyImages x:Key="image2"
							IsFound="False" />
			<local:MyImages x:Key="image3"
							IsFound="True" />

			<Style TargetType="{x:Type Image}"
				   x:Key="myImage">
				<Setter Property="Width"
						Value="70" />
				<Style.Triggers>
					<DataTrigger Binding="{Binding Path=IsFound}"
								 Value="False">
						<Setter Property="Source"
								Value="images\not_available.png" />
					</DataTrigger>
					<DataTrigger Binding="{Binding Path=IsFound}"
								 Value="True">
						<Setter Property="Source"
								Value="{Binding Path=PathToImage}" />
					</DataTrigger>
				</Style.Triggers>
			</Style>
		</StackPanel.Resources>

		<Image DataContext="{StaticResource image1}"
			   Style="{StaticResource myImage}" />
		<Image DataContext="{StaticResource image2}"
			   Style="{StaticResource myImage}" />
		<Image DataContext="{StaticResource image3}"
			   Style="{StaticResource myImage}" />
	</StackPanel>
</Window>