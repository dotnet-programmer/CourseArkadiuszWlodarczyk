<Window x:Class="Chapter_10_AdvancedWpf.Chapters.Chapter_10_14_DataTrigger"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:models="clr-namespace:Chapter_10_AdvancedWpf.Models"
		Title="Chapter_10_14_DataTrigger"
		Height="400"
		Width="600"
		WindowStartupLocation="CenterScreen">

	<StackPanel>
		<StackPanel.Resources>
			<models:MyImages x:Key="image1"
				IsFound="True" />
			<models:MyImages x:Key="image2"
				IsFound="False" />
			<models:MyImages x:Key="image3"
				IsFound="True" />

			<Style TargetType="{x:Type Image}"
				   x:Key="myImage">
				<Setter Property="Width"
						Value="70" />
				<Style.Triggers>
					<DataTrigger Binding="{Binding Path=IsFound}"
								 Value="False">
						<Setter Property="Source"
								Value="..\Images\not_available.png" />
					</DataTrigger>
					<DataTrigger Binding="{Binding Path=IsFound}"
								 Value="True">
						<Setter Property="Source"
								Value="{Binding Path=PathToImage}" />
					</DataTrigger>
				</Style.Triggers>
			</Style>
		</StackPanel.Resources>

		<Image DataContext="{StaticResource image1}"
			   Style="{StaticResource myImage}" />
		<Image DataContext="{StaticResource image2}"
			   Style="{StaticResource myImage}" />
		<Image DataContext="{StaticResource image3}"
			   Style="{StaticResource myImage}" />
	</StackPanel>
</Window>