<Window x:Class="Chapter_10_AdvancedWpf.Chapters.Chapter_10_31_TooltipAndtoolbar"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:helpers="clr-namespace:Chapter_10_AdvancedWpf.Helpers"
		Title="Chapter_10_31_TooltipAndtoolbar"
		Height="400"
		Width="600"
		WindowStartupLocation="CenterScreen">

	<Window.CommandBindings>
		<CommandBinding Command="helpers:CustomCommands.Exit"
						CanExecute="CommandBinding_CanExecute"
						Executed="CommandBinding_Executed" />
		<CommandBinding Command="Help"
						CanExecute="CommandBinding_CanExecute_1"
						Executed="CommandBinding_Executed_1" />
	</Window.CommandBindings>

	<DockPanel>
		<Menu DockPanel.Dock="Top">
			<MenuItem Header="_File">
				<MenuItem Header="New"
						  Command="New"
						  ToolTipService.ShowOnDisabled="True">
					<MenuItem.ToolTip>
						<StackPanel>
							<TextBlock Text="Open New File" />
						</StackPanel>
					</MenuItem.ToolTip>
					<MenuItem.Icon>
						<Image Source=".\Images\new_file.png"
							   Width="16" />
					</MenuItem.Icon>
				</MenuItem>
				<MenuItem Header="Open"
						  Command="Open">
					<MenuItem.Icon>
						<Image Source="..\Images\open_file.png"
							   Width="16" />
					</MenuItem.Icon>
				</MenuItem>
				<MenuItem Header="Save"
						  Command="Save" />
				<Separator />
				<MenuItem Header="Exit"
						  Command="helpers:CustomCommands.Exit"
						  InputGestureText="CTRL+Q" />
			</MenuItem>
			<MenuItem Header="_Edit">
				<MenuItem  Command="Copy" />
				<MenuItem  Command="Cut" />
				<MenuItem  Command="Paste" />
				<MenuItem Header="I_ncrease Size"
						  Command="IncreaseFontSize" />
			</MenuItem>
			<MenuItem Header="Tools">
				<MenuItem Command="Help" />
				<MenuItem IsCheckable="True"
						  Header="Zawijaj wiersze"
						  IsChecked="True" />
			</MenuItem>
		</Menu>
		<Button Command="Copy"
				Content="Copy"
				DockPanel.Dock="Bottom"
				CommandTarget="{Binding ElementName=myRichTextBox}" />

		<ToolBarTray DockPanel.Dock="Left"
					 Orientation="Vertical">
			<ToolBar>
				<Button>
					<Button.ToolTip>
						<StackPanel>
							<TextBlock FontWeight="Bold"
									   FontSize="14"
									   Text="Open New File" />
							<TextBlock Text="Search your computer for a file to open..." />
							<Separator />
							<TextBlock FontStyle="Italic"
									   Text="Press F1 for more help" />
						</StackPanel>
					</Button.ToolTip>
					<Button.Content>
						<Image Source="..\Images\open-folder.png"
							   Width="19" />
					</Button.Content>
				</Button>
				<Button>
					<Button.Content>
						<Image Source="..\Images\open-folder.png"
							   Width="19" />
					</Button.Content>
				</Button>
				<Button>
					<Button.Content>
						<Image Source="..\Images\open-folder.png"
							   Width="19" />
					</Button.Content>
				</Button>
				<Button>
					<Button.Content>
						<Image Source="..\Images\open-folder.png"
							   Width="19" />
					</Button.Content>
				</Button>
			</ToolBar>
			<ToolBar>
				<Button>
					<Button.Content>
						<Image Source="..\Images\open-folder.png"
							   Width="16" />
					</Button.Content>
				</Button>
				<Button>
					<Button.Content>
						<Image Source="..\Images\open-folder.png"
							   Width="16" />
					</Button.Content>
				</Button>
				<Button>
					<Button.Content>
						<Image Source="..\Images\open-folder.png"
							   Width="16" />
					</Button.Content>
				</Button>
				<Button>
					<Button.Content>
						<Image Source="..\Images\open-folder.png"
							   Width="16" />
					</Button.Content>
				</Button>
			</ToolBar>
		</ToolBarTray>
		<RichTextBox x:Name="myRichTextBox" />
	</DockPanel>
</Window>