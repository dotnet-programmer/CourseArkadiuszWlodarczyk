<Window x:Class="Chapter_10_AdvancedWpf.Chapters.Chapter_10_05_GroupBoxAndRadioButton"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="Chapter_10_05_GroupBoxAndRadioButton"
		Height="500"
		Width="600"
		WindowStartupLocation="CenterScreen">

	<StackPanel>
		<GroupBox Margin="10">
			<GroupBox.Header>
				<Bold>Ile grasz dziennie na komputerze?</Bold>
			</GroupBox.Header>
			<StackPanel Margin="10">
				<RadioButton Content="wcale" />
				<RadioButton Content="1-3h" />
				<RadioButton Content="3-6h" />
				<RadioButton Content="24/h ;)" />
			</StackPanel>
		</GroupBox>
		<GroupBox Margin="10">
			<GroupBox.Header>
				<Bold>Ile dziennie śpisz?</Bold>
			</GroupBox.Header>
			<StackPanel Margin="10">
				<RadioButton Content="wcale" />
				<RadioButton Content="1-3h" />
				<RadioButton Content="3-6h" />
				<RadioButton x:Name="RbMore">
					<WrapPanel VerticalAlignment="Center">
						<Label Content="więcej: " Margin="2 0"/>
						<TextBox MinWidth="100"
								 IsEnabled="{Binding ElementName=RbMore, Path=IsChecked}" />
					</WrapPanel>
				</RadioButton>
			</StackPanel>
		</GroupBox>
	</StackPanel>
</Window>