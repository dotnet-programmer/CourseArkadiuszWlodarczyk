<Window x:Class="Chapter_10_AdvancedWpf.Chapters.Chapter_10_13_EasingFuncions"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="Chapter_10_13_EasingFuncions"
		Height="400"
		Width="600"
		WindowStartupLocation="CenterScreen">

	<StackPanel>
		<TextBlock Text="To jest testowy tekst">

		<!--pierwszy sposób - umieszczając triggery w Resources jako element stylu-->
		<!--<TextBlock.Resources>
