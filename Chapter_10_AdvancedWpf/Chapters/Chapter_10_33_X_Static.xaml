<Window x:Class="Chapter_10_AdvancedWpf.Chapters.Chapter_10_33_X_Static"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:models="clr-namespace:Chapter_10_AdvancedWpf.Models"
		xmlns:sys="clr-namespace:System;assembly=mscorlib"
		Title="Chapter_10_33_X_Static"
		Height="400"
		Width="600"
		WindowStartupLocation="CenterScreen">

	<StackPanel>
		<Label Margin="20"
			   Content="{x:Static Colors.Azure}" />
		<Label Margin="20"
			   Content="{x:Static sys:Environment.UserDomainName}" />
		<Label Margin="20"
			   Content="{x:Static sys:DateTime.Now}" />
		<Label Margin="20"
			   Content="{x:Static models:FileExtensions.Xml}" />
	</StackPanel>
</Window>