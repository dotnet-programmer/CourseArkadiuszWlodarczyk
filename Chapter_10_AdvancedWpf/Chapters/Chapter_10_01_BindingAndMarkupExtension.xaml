<Window x:Class="Chapter_10_AdvancedWpf.Chapters.Chapter_10_01_BindingAndMarkupExtension"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="Chapter_10_01_BindingAndMarkupExtension"
		Height="400"
		Width="600"
		WindowStartupLocation="CenterScreen">

	<StackPanel>
		<TextBox x:Name="TextToCopy"
				 Text="Test"
				 Margin="10" />

		<!-- to co jest w nawiasach { } nazywa się Markup Extensions -->
		<TextBlock x:Name="TextBlockWithText"
				   Margin="10"
				   Text="{Binding ElementName=TextToCopy, Path=Text, Mode=TwoWay}" />

		<Button Click="Button_Click"
				Content="Kliknij mnie"
				Margin="10" />

		<Slider x:Name="Slider1"
				Value="{Binding ElementName=Slider1Value, Path=Text, Mode=TwoWay}"
				Maximum="30"
				Minimum="0"
				Margin="10"
				IsSnapToTickEnabled="True"
				TickFrequency="5" />

		<TextBox x:Name="Slider1Value"
				 Margin="10" />

		<Slider x:Name="Slider2"
				Maximum="30"
				Minimum="0"
				Margin="10"
				IsSnapToTickEnabled="True"
				TickFrequency="1" />

		<TextBox x:Name="Slider2Value"
				 Margin="10"
				 Text="{Binding ElementName=Slider2, Path=Value, Mode=TwoWay}" />
	</StackPanel>
</Window>