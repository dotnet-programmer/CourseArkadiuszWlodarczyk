<Window x:Class="Chapter_10_AdvancedWpf.Chapters.Chapter_10_03_DataContextAndINotifyPropertyChanged"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:helpers="clr-namespace:Chapter_10_AdvancedWpf.Helpers"
		d:DataContext="{d:DesignInstance Type=helpers:InkEditingModes}"
		mc:Ignorable="d"
		Title="Chapter_10_03_DataContextAndINotifyPropertyChanged"
		Height="400"
		Width="600"
		WindowStartupLocation="CenterScreen">

	<DockPanel>
		<StackPanel Width="80">
			<Button x:Name="Selection"
					Content="Select"
					Click="Selection_Click" />
			<Button x:Name="Drawing"
					Content="Draw"
					Click="Drawing_Click" />
		</StackPanel>
		
		<InkCanvas EditingMode="{Binding Path=EditingMode}" />
	</DockPanel>
</Window>