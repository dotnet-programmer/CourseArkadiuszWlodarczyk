<Window x:Class="Chapter_10_AdvancedWpf.Chapters.Chapter_10_20_ListBoxAndObservableCollection"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="Chapter_10_20_ListBoxAndObservableCollection"
		Height="400"
		Width="600"
		WindowStartupLocation="CenterScreen">

	<StackPanel>
		<WrapPanel>
			<TextBox x:Name="NameToAdd"
					 Width="100" />
			<Button Click="Button_Click"
					Content="Dodaj do listy" />
		</WrapPanel>

		<ListBox x:Name="ListOfNames"
				 SelectionMode="Extended"
				 SelectionChanged="ListBox_SelectionChanged">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<WrapPanel>
						<TextBlock Text="{Binding}" />
						<Label Content="Opis" />
					</WrapPanel>
				</DataTemplate>
			</ListBox.ItemTemplate>

			<!--styl pojedynczego elementu-->
			<ListBox.ItemContainerStyle>
				<Style TargetType="{x:Type ListBoxItem}">
					<Setter Property="Padding"
							Value="5" />
					<Style.Triggers>
						<MultiTrigger>
							<MultiTrigger.Conditions>
								<Condition Property="IsSelected"
										   Value="True" />
								<Condition Property="IsFocused"
										   Value="True" />
							</MultiTrigger.Conditions>
							<Setter Property="FontSize"
									Value="15" />
							<Setter Property="FontWeight"
									Value="Bold" />
						</MultiTrigger>
					</Style.Triggers>
				</Style>
			</ListBox.ItemContainerStyle>
		</ListBox>

		<Button Click="Button_Click_1"
				Content="Usuń zaznaczony element" />
	</StackPanel>
</Window>