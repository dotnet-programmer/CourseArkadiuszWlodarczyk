<Window x:Class="Chapter_10_AdvancedWpf.Chapter_10_34_StringFormat"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:sys="clr-namespace:System;assembly=mscorlib"
		mc:Ignorable="d"
		Title="Chapter_10_34_StringFormat"
		Height="400"
		Width="600"
		WindowStartupLocation="CenterScreen"
		x:Name="nameOfWindow">

	<StackPanel>
		<Label Margin="20"
			   Content="{x:Static sys:DateTime.Now}"
			   ContentStringFormat="dd/MM/yyyy HH:mm:ss" />

		<TextBlock Margin="20"
				   Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat=dd/MM/yyyy HH:mm:ss}" />

		<TextBlock Margin="20"
				   Text="{Binding ElementName=nameOfWindow, Path=Width, StringFormat=0.0000}" />
	</StackPanel>
</Window>