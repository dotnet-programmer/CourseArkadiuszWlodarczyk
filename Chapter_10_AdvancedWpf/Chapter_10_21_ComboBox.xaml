<Window x:Class="Chapter_10_AdvancedWpf.Chapter_10_21_ComboBox"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d"
		Title="Chapter_10_21_ComboBox"
		Height="400"
		Width="600"
		WindowStartupLocation="CenterScreen">

	<StackPanel>
		<WrapPanel>
			<TextBox x:Name="NameToAdd"
					 Width="100" />
			<Button Click="Button_Click"
					Content="Dodaj do listy" />
		</WrapPanel>

		<ComboBox x:Name="ListOfNames"
				  IsEditable="True"
				  IsTextSearchEnabled="True"
				  IsTextSearchCaseSensitive="True">
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<WrapPanel>
						<TextBlock Text="{Binding}" />
						<Label Content="Opis" />
					</WrapPanel>
				</DataTemplate>
			</ComboBox.ItemTemplate>

			<!--styl pojedynczego elementu-->
			<ComboBox.ItemContainerStyle>
				<Style TargetType="{x:Type ListBoxItem}">
					<Setter Property="Padding"
							Value="5" />
					<Style.Triggers>
						<MultiTrigger>
							<MultiTrigger.Conditions>
								<Condition Property="IsSelected"
										   Value="True" />
								<Condition Property="IsFocused"
										   Value="True" />
							</MultiTrigger.Conditions>
							<Setter Property="FontSize"
									Value="15" />
							<Setter Property="FontWeight"
									Value="Bold" />
						</MultiTrigger>
					</Style.Triggers>
				</Style>
			</ComboBox.ItemContainerStyle>
		</ComboBox>

		<Button Click="Button_Click_1"
				Content="Usuń zaznaczony element" />
	</StackPanel>
</Window>