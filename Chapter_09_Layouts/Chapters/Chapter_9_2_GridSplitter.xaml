<Window x:Class="Chapter_09_Layouts.Chapters.Chapter_9_2_GridSplitter"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="Chapter_9_2_GridSplitter"
		Height="400"
		Width="600"
		WindowStartupLocation="CenterScreen">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"
						   MinHeight="50"
						   MaxHeight="200" />
			<RowDefinition Height="4*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>

		<Grid Grid.Row="0"
			  Grid.Column="0"
			  Grid.ColumnSpan="2">

			<Grid.ColumnDefinitions>
				<ColumnDefinition MinWidth="50" />
				<ColumnDefinition MinWidth="50"
								  Width="*" />
			</Grid.ColumnDefinitions>

			<TextBlock Grid.Row="0"
					   Grid.Column="0"
					   Text="Menu1" />

			<TextBlock Grid.Row="0"
					   Grid.Column="1"
					   Text="Menu2" />

			<GridSplitter Grid.Row="0"
						  Grid.Column="0"
						  Background="Blue"
						  Width="5" />
		</Grid>

		<GridSplitter Grid.Row="1"
					  Grid.Column="0"
					  Grid.ColumnSpan="2"
					  Height="5"
					  Background="Red"
					  HorizontalAlignment="Stretch"
					  VerticalAlignment="Top" />

		<TextBlock Grid.Row="1"
				   Grid.Column="0"
				   Margin="10"
				   Text="To jest jakiś tekst o niczym." />
	</Grid>
</Window>