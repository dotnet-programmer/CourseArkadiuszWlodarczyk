<Window x:Class="Chapter_09_Layouts.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="MainWindow"
		Height="400"
		Width="400"
		WindowStartupLocation="CenterScreen">

	<Window.Resources>
		<Style TargetType="{x:Type Button}">
			<Setter Property="Margin"
					Value="10, 5, 10, 5" />
			<Setter Property="Height"
					Value="25" />
		</Style>
	</Window.Resources>

	<StackPanel>
		<Button x:Name="Btn_9_1"
				Content="Rozdział 9.1 Layouty i Attached Property"
				Click="Btn_9_1_Click" />
		<Button x:Name="Btn_9_2"
				Content="Rozdział 9.2 GridSplitter"
				Click="Btn_9_2_Click" />
		<Button x:Name="Btn_9_3"
				Content="Rozdział 9.3 UniformGrid"
				Click="Btn_9_3_Click" />
		<Button x:Name="Btn_9_4"
				Content="Rozdział 9.4 StackPanel i WrapPanel"
				Click="Btn_9_4_Click" />
		<Button x:Name="Btn_9_5"
				Content="Rozdział 9.5 DockPanel"
				Click="Btn_9_5_Click" />
		<Button x:Name="Btn_9_6"
				Content="Rozdział 9.6 Canvas"
				Click="Btn_9_6_Click" />
		<Button x:Name="Btn_9_7"
				Content="Rozdział 9.7 ScrollViewer i zawijanie tekstu"
				Click="Btn_9_7_Click" />
		<Button x:Name="Btn_9_8"
				Content="Rozdział 9.8 Expander - rozwijanie i ukrywanie treści"
				Click="Btn_9_8_Click" />
		<Button x:Name="Btn_9_9"
				Content="Rozdział 9.9 RadioButton, GroupBox, Label"
				Click="Btn_9_9_Click" />
	</StackPanel>
</Window>