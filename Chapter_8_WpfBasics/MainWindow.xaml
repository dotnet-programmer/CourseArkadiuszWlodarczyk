<Window x:Class="Chapter_8_WpfBasics.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d"
		Title="MainWindow"
		Height="450"
		Width="800">

	<StackPanel>
		<StackPanel>
			<Button Opacity="0.5"
					x:Name="Add"
					Margin="10"
					Content="Kliknij mnie"
					Click="Add_Click"></Button>
			<Label x:Name="label_content"
				   Margin="10"
				   Content="Label" />
		</StackPanel>

		<Separator Height="50" />

		<StackPanel>
			<Button FontFamily="Tahoma"
					Click="Button_Click"
					Margin="10"
					Width="592">
				<StackPanel>
					<Image Source="Images\logo.gif"
						   Margin="10"
						   Height="70"
						   Width="462" />
					<Label HorizontalContentAlignment="Center"
						   Margin="10">Kliknij mnie</Label>
					<Button Click="Button_Click"
							Margin="10">Kolejny button</Button>
				</StackPanel>
			</Button>
			<TextBlock x:Name="test"
					   Margin="10"
					   HorizontalAlignment="Center">Test TextBlock</TextBlock>
		</StackPanel>
	</StackPanel>
</Window>